[main]
    vardir = /var/lib/puppet/lib
    logdir = /var/lib/puppet/log
    rundir = /var/lib/puppet/run
    modulepath = /etc/puppet/modules:/opt/puppet/share/puppet/modules
    user = pe-puppet
    group = pe-puppet
    archive_files = true
    archive_file_server = masterhost.tegnix.com

[agent]
    certname = clienthost.tegnix.com
    server = puppet
    report = true
    classfile = $vardir/classes.txt
    localconfig = $vardir/localconfig
    graph = true
    pluginsync = true
